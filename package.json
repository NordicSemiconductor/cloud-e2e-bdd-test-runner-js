{
  "name": "@bifravst/e2e-bdd-test-runner",
  "version": "0.0.0-development",
  "description": "Implementation of a test-runner for end-to-end tests of cloud-native applications using Gherkin features.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepare": "tsc",
    "lint": "npm run eslint && npm run prettier:lint",
    "eslint": "eslint  --ext .js,.ts \"./src/**/*.ts\"",
    "prettier": "prettier --write \"./src/**/*.ts\"",
    "prettier:lint": "prettier --list-different \"./src/**/*.ts\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bifravst/e2e-bdd-test-runner.git"
  },
  "keywords": [
    "BDD",
    "end-to-end",
    "testing",
    "serverless",
    "cloud native",
    "aws"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/bifravst/e2e-bdd-test-runner/issues"
  },
  "homepage": "https://github.com/bifravst/e2e-bdd-test-runner#readme",
  "dependencies": {
    "@types/backoff": "^2.5.1",
    "@types/chai": "^4.2.12",
    "@types/glob": "^7.1.3",
    "@types/jsonata": "^1.5.1",
    "@types/node-fetch": "^2.5.7",
    "aws-sdk": "^2.733.0",
    "backoff": "^2.5.0",
    "chai": "^4.2.0",
    "chai-subset": "^1.6.0",
    "chalk": "^4.1.0",
    "fetch-ponyfill": "^6.1.1",
    "gherkin": "^9.0.0",
    "glob": "^7.1.6",
    "graphql": "^15.3.0",
    "jsonata": "^1.8.3",
    "node-fetch": "^2.6.0",
    "paho-mqtt": "^1.1.0",
    "toposort": "^2.0.2",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@bifravst/code-style": "8.0.60",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-angular": "9.1.2",
    "@types/chai-subset": "1.3.3",
    "@types/jest": "26.0.13",
    "@types/node": "14.6.4",
    "@types/paho-mqtt": "1.0.4",
    "@types/toposort": "2.0.3",
    "@types/uuid": "8.3.0",
    "@types/ws": "7.2.6",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "files": [
    "package-lock.json",
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=5.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npx jest --onlyChanged"
    }
  },
  "lint-staged": {
    "*.{md,json,yaml,yml,js}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "jest": {
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+\\.spec\\.ts$",
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
